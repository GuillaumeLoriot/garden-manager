{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Sign-Up
{% endblock %}

{% block body %}
  <main class="h-screen flex justify-evenly items-center">
    <section id="profile" class="flex rounded-2lg w-[70%] min-h-[75vh] bg-[#ffffff] shadow-lg hover:shadow-2lg hover:shadow-blue-950 transition-shadow">
      <div class="flex justify-center items-center w-full">
        {{ form_start(register_form) }}

        <div class="flex flex-col justify-center">
          <h1 class="text-center text-2xl font-medium text-blue-900 mb-5">Cr√©er mon compte</h1>
          <div class="text-lg font-medium text-gray-700">{{ form_label(register_form.username) }}
            {{ form_widget(register_form.username, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(register_form.username) }}</div>

          <div class="text-lg font-medium text-gray-700">{{ form_label(register_form.email) }}
            {{ form_widget(register_form.email, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }} {{ form_errors(register_form.email) }}</div>

          <div class="text-lg font-medium text-gray-700">{{ form_label(register_form.password.first) }}
            {{ form_widget(register_form.password.first, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(register_form.password.first) }}</div>

          <div class="text-lg font-medium text-gray-700">{{ form_label(register_form.password.second) }}
            {{ form_widget(register_form.password.second, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(register_form.password.second) }}</div>

          <div class="text-lg font-medium text-gray-700">{{ form_label(register_form.presentation) }}
            {{ form_widget(register_form.presentation, { attr: { class: 'w-full h-30 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(register_form.presentation) }}</div>

          <div class="text-lg font-medium text-gray-700">{{ form_label(register_form.profilePicture) }}
            {{ form_widget(register_form.profilePicture, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(register_form.profilePicture) }}</div>

          <div class="flex justify-center mt-5">{{ form_widget(register_form.submit, { attr: { class: 'w-2/3 text-white bg-blue-900 hover:bg-stone-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center' } }) }}</div>
        </div>
        {{ form_end(register_form) }}
      </div>
    </section>
  </main>
{% endblock %}
