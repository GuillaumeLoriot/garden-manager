{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Modifier le profil
{% endblock %}

{% block body %}
  <main class="h-screen flex justify-evenly items-center">
    <section id="profile" class="flex rounded-2xl w-[70%] min-h-[75vh] bg-[#ffffff] shadow-xl hover:shadow-2xl hover:shadow-blue-950 transition-shadow">
      <div class="flex flex-col justify-start rounded-2xl w-[30%]">
        <img src="{{ asset('images/default/' ~ user.profilePicture) }}" alt="Photo de l'utilisateur {{ user.profilePicture }}" class="rounded-2xl ml-5 mt-5" />
      </div>
      <div class="flex flex-col justify-between p-8 w-[70%]">
        <div class="flex justify-center items-center w-full">
          {{ form_start(edit_form) }}

          <div class="flex flex-col justify-center">
            <h1 class="text-center text-2xl font-medium text-blue-900 mb-5">Modifier mon profil</h1>
            <div class="text-lg font-medium text-gray-700">{{ form_label(edit_form.username) }}
              {{ form_widget(edit_form.username, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(edit_form.username) }}</div>

            <div class="text-lg font-medium text-gray-700">{{ form_label(edit_form.email) }}
              {{ form_widget(edit_form.email, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }} {{ form_errors(edit_form.email) }}</div>

            <div class="text-lg font-medium text-gray-700">{{ form_label(edit_form.password.first) }}
              {{ form_widget(edit_form.password.first, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(edit_form.password.first) }}</div>

            <div class="text-lg font-medium text-gray-700">{{ form_label(edit_form.password.second) }}
              {{ form_widget(edit_form.password.second, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(edit_form.password.second) }}</div>

            <div class="text-lg font-medium text-gray-700">{{ form_label(edit_form.presentation) }}
              {{ form_widget(edit_form.presentation, { attr: { class: 'w-full h-30 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(edit_form.presentation) }}</div>

            <div class="text-lg font-medium text-gray-700">{{ form_label(edit_form.profilePicture) }}
              {{ form_widget(edit_form.profilePicture, { attr: { class: 'w-full h-10 px-3 border border-gray-300 rounded-md text-lg text-black font-thin' } }) }}{{ form_errors(edit_form.profilePicture) }}</div>

            <div class="flex justify-center mt-5">{{ form_widget(edit_form.submit, { attr: { class: 'w-2/3 text-white bg-blue-900 hover:bg-stone-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center' } }) }}</div>
          </div>
          {{ form_end(edit_form) }}
        </div>
      </div>
    </section>
  </main>
{% endblock %}
