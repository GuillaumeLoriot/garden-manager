{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Modifier le profil
{% endblock %}

{% block body %}
  <main class="h-screen flex justify-evenly items-center">
    <section id="profile" class="flex rounded-2xl w-[70%] min-h-[75vh] bg-[#ffffff] shadow-xl hover:shadow-2xl hover:shadow-blue-950 transition-shadow">
      <div class="flex flex-col justify-start rounded-2xl w-[30%]">
        <img src="{{ asset('uploads/images/users/' ~ user.profilePicture) }}" alt="Photo de l'utilisateur {{ user.profilePicture }}" class="rounded-2xl ml-5 mt-5" />
      </div>
      <div class="flex flex-col justify-between p-8 w-[70%]">{{ form(edit_form) }}</div>
    </section>
  </main>
{% endblock %}
